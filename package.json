{
  "name": "ciencias-2-florez",
  "version": "1.0.0",
  "description": "Simulador de Ciencias de ComputaciÃ³n 2 para la clase de Florez - Full Stack Application",
  "main": "electron.js",
  "scripts": {
    "setup": "./setup.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:start": "concurrently \"npm run dev:frontend\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "start:backend": "cd backend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend && electron-builder",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:linux": "npm run build:frontend && electron-builder --linux",
    "build:all": "npm run build:frontend && electron-builder --win --linux",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "algorithms",
    "search",
    "education",
    "react",
    "express",
    "full-stack",
    "electron"
  ],
  "author": "Proyecto Ciencias 2 - Florez",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.ciencias2florez.app",
    "productName": "Simulador Ciencias 2",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron.js",
      "preload.js",
      "backend/**/*",
      "frontend/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "frontend/dist",
        "to": "frontend/dist"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "frontend/public/icon.png",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Simulador Ciencias 2"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "frontend/public/icon.png",
      "category": "Education",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
